{
  // Configuration used specifically when running in Docker containers

  "DemoPaymentAPISettings": {
    // Use the mock API container instead of localhost
    "APIUrl": "http://mockapi:8080/api/DemoPayment/ProcessPayment"
  },
  "RabbitMQ": {
    // Connect to the RabbitMQ container in the same Docker network
    "HostName": "rabbitmq",
    "UserName": "guest",
    "Password": "guest",
    "Port": 5672
  },
  "ConnectionStrings": {
    // Use host.docker.internal to connect to SQL Server from inside Docker
    "DefaultConnection": "Server=host.docker.internal,1433;Database=PaymentGateway;User Id=sa;Password=YourStrongPassword123!;TrustServerCertificate=True;"
  }
}
